<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calcutre">

    <Button
        android:id="@+id/carpma"
        android:layout_width="89dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:onClick="carpma"
        android:text="*"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/cikarma"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

    <Button
        android:id="@+id/toplama"
        android:layout_width="89dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:onClick="toplama"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

    <Button
        android:id="@+id/cikarma"
        android:layout_width="89dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:onClick="cikarma"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/toplama"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

    <Button
        android:id="@+id/bolme"
        android:layout_width="89dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="112dp"
        android:onClick="bolme"
        android:text="/"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/carpma"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="233dp"
        android:layout_height="64dp"
        android:layout_marginTop="244dp"
        android:text="Sonuç:"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Sayı Giriniz:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Sayı Girniz:"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" />

</androidx.constraintlayout.widget.ConstraintLayout>